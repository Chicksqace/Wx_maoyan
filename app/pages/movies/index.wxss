.head {
  height: 84rpx;
  background-color: #d43e37;
  display: flex;
  align-items: center;
}

.selpoi {
  
  font-size: 14px;
  margin:0 26rpx;
  color: white;
}

.search-rad {
  height: 56rpx;
  background-color: white;
  border-radius: 20rpx;
  flex: 1;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  color: #aaa;
}
.selcity{
  position: relative;
}



.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: white;
  border-style: solid;
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
  position: absolute;
  right: -28rpx;
  margin-top: -30rpx;
}

.movie {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #dcdcdc;
  margin-left: 22rpx;
}

.intro-warp {
  margin: 0 22rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  height: 172rpx;
}

.intro {
  display: flex;
  flex-flow: column wrap;
  width: 438rpx;
  justify-content: space-around;
}

.buy {
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  align-items: flex-end;
}

.buy-nav {
  width: 90rpx;
  height: 54rpx;
  border: 1rpx solid #f34f39;
  color: #f34f39;
  border-radius: 8rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 24rpx;
}

.pre {
  border: 1rpx solid #12a2f1;
  color: #12a2f1;
}

.rating {
  color: #ffb400;
  font-size: 28rpx;
}
