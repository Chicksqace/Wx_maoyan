.suggest {
  display: flex;
  align-items: center;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  margin-left: 30rpx;
}

.placeholder {
  font-size: 30rpx;
  color: #ccc;
}

input {
  padding-left: 20rpx;
}

.scroll {
  padding-top: 100rpx;
  height: 100%;
  box-sizing: border-box;
}

.title {
  height: 46rpx;
  background-color: #f5f5f5;
  font-size: 30rpx;
  color: #999;
  padding-left: 30rpx;
  padding-top: 30rpx;
  margin-right: 30rpx;
}

.citys {
  display: flex;
  flex-flow: row wrap;
}

.city {
  width: 170rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
}

.slibar {
  position: fixed;
  top: 250rpx;
  right: 18rpx;
  color: #999;
  font-size: 22rpx;
  line-height: 30rpx;
  text-align: right;
  width: 46rpx;
}

