}

.flex {
  height: 120rpx;
  overflow: hidden;
}

.arrow {
  height: 36rpx;
  position: relative;
  background-color: white;
  border-bottom: 2rpx #d8d8d8 solid;
  margin-bottom: 20rpx;
}

.uparrow:after {
  transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 0);
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  position: absolute;
  left: 50%;
  margin-right: -22rpx;
}

.downarrow:after {
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  position: absolute;
  left: 50%;
  margin-right: -22rpx;
}

.actorLi {
  display: flex;
}

.actTitle {
  margin: 28rpx 0 20rpx 28rpx;
  font-size: 28rpx;
}

.acItem {
  width: 134rpx;
