  flex-flow: column;
  margin: 0 7rpx 34rpx;
  font-size: 22rpx;
  align-items: center;
}

.textOver {
  width: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.rankWarp {
  display: flex;
  margin: 0 74rpx;
