}

.videoN {
  margin-right: 56rpx;
  color: #a5a5a5;
  position: relative;
}

.videoN::after {
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  content: " ";
  display: inline-block;
  height: 14rpx;
  width: 14rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #ccc;
  border-style: solid;
  position: absolute;
  top: 8rpx;
}

